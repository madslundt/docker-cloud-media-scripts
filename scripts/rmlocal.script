	# Generate filelist and iterate through it...
	find "${local_decrypt_dir}" -type f |
		while read -r n; do

			# Find the pathname relative to the root of your remote and store filename
			filename="$(echo "$n" | sed -e s@"${local_decrypt_dir}"@@)"
